<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- 调试模式下禁用iText CJK字体系统 -->
    <add key="ITEXT_DISABLE_CJK_FONT_LOADING" value="true" />
    <add key="ITEXT_DISABLE_CJK" value="true" />
    <add key="ITEXT_NO_CJK" value="true" />
    <add key="ITEXT_DISABLE_CJK_LOADING" value="true" />
  </appSettings>

  <runtime>
    <!-- 防止在调试模式下加载某些可能有问题的程序集 -->
    <loadFromRemoteSources enabled="false" />
    <enforceFIPSPolicy enabled="false" />
  </runtime>

  <system.diagnostics>
    <!-- 调试模式下的日志配置 -->
    <trace autoflush="true">
      <listeners>
        <add name="DebugListener" type="System.Diagnostics.DefaultTraceListener" />
      </listeners>
    </trace>
  </system.diagnostics>
</configuration>