<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <RootNamespace>WindowsFormsApp3</RootNamespace>
    <AssemblyName>大诚重命名工具</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <LangVersion>9</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <ApplicationIcon>Resources\dc.ico</ApplicationIcon>
    <Deterministic>true</Deterministic>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateResourceUsePreserializedResources>true</GenerateResourceUsePreserializedResources>
  </PropertyGroup>

  <!-- 确保图标文件被正确嵌入为资源 -->
  <ItemGroup>
    <Content Include="Resources\dc.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- SVG图标文件资源 -->
  <ItemGroup>
    <Content Include="Resources\Icons\*.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- 字体文件资源嵌入 -->
  <ItemGroup>
    <EmbeddedResource Include="Resources\Fonts\simhei.ttf" />
    <EmbeddedResource Include="Resources\Fonts\simsun.ttc" />
    <EmbeddedResource Include="Resources\Fonts\msyh.ttc" />
    <EmbeddedResource Include="Resources\Fonts\NotoSansSC-Regular.ttf" />
  </ItemGroup>

  <!-- 确保字体文件被复制到输出目录 -->
  <ItemGroup>
    <None Include="Resources\Fonts\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  
  <!-- NuGet包引用 -->
  <ItemGroup>
    <PackageReference Include="AntdUI" Version="2.1.12" />
    <PackageReference Include="EPPlus" Version="5.0.4" />
    <PackageReference Include="itext" Version="9.3.0" />
    <PackageReference Include="itext.bouncy-castle-adapter" Version="9.3.0" />
    <PackageReference Include="itext7.pdfcalligraph" Version="4.0.0" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="8.0.0" />
    <PackageReference Include="Microsoft.Bcl.HashCode" Version="1.1.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.2" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.2" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.2" />
    <PackageReference Include="Microsoft.Extensions.Primitives" Version="8.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Ookii.Dialogs.WinForms" Version="4.0.0" />
    <PackageReference Include="ReaLTaiizor" Version="3.8.1.3" />
    <PackageReference Include="Svg" Version="3.4.7" />
    <PackageReference Include="System.Buffers" Version="4.5.1" />
